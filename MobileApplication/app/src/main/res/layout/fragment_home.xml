<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/homeProducts"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="To Products"
            tools:layout_editor_absoluteX="150dp"
            tools:layout_editor_absoluteY="476dp" />

        <Button
            android:id="@+id/homeTransactions"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="To Transaction"
            tools:layout_editor_absoluteX="141dp"
            tools:layout_editor_absoluteY="409dp" />

        <Button
            android:id="@+id/homeDevices"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="To Devices"
            app:layout_constraintTop_toBottomOf="@+id/button"
            tools:layout_editor_absoluteX="139dp" />

        <Button
            android:id="@+id/homeProfile"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="To Profile"
            tools:layout_editor_absoluteX="140dp"
            tools:layout_editor_absoluteY="214dp" />
    </LinearLayout>

</LinearLayout>